# ============================
# Flask Backend Config
# ============================
PORT=5000

# Thresholds for stock categorization
THRESHOLD_SAFE_DAYS=30
THRESHOLD_LOW_DAYS=7

# ============================
# Database (optional)
# Leave blank to use in-memory
# ============================
MONGO_URI=
MONGO_DB=inventory_restocks

# ============================
# Notifications (optional)
# SMTP server for sending alerts
# ============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFY_FROM=your_email@gmail.com

# ============================
# Agent Settings
# ============================
# Where the backend API runs
BACKEND_URL=http://localhost:5000

# ============================
# AI (optional)
# Enable natural language queries
# ============================
# AI (Google Gemini API)
GEMINI_API_KEY=your_gemini_api_key_here

